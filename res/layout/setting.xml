<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="10dip">
    <com.cyou.setting.CustomerScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="@null">
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:orientation="horizontal">
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:scaleType="fitCenter"
		        android:src="@drawable/more_download"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="20dip"
		        android:gravity="center"
		        android:textColor="#a5a5a5"
		        android:textSize="14sp"
		        android:layout_gravity="center_vertical"
		        android:text="下载管理"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginTop="5dip"
		    android:background="@drawable/round_xbg">
		    <LinearLayout 
		        style="@style/more_item_ll">
		        <TextView
		            android:layout_width="0.0dip"
		            android:layout_weight="1.0"
		            android:layout_height="wrap_content"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:gravity="center_vertical"
		            android:text="游戏更新"/>
		        <ImageView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:scaleType="center"
					android:src="@drawable/next_grey"
					android:layout_gravity="right|center_vertical"/>
		    </LinearLayout>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:layout_marginTop="10dip"
		    android:orientation="horizontal">
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:scaleType="fitCenter"
		        android:src="@drawable/more_basic"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="20dip"
		        android:layout_gravity="center_vertical"
		        android:gravity="center"
		        android:textColor="#a5a5a5"
		        android:textSize="14sp"
		        android:text="基本设置"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginTop="5dip"
		    android:background="@drawable/round_xbg">
		    <LinearLayout 
		        style="@style/more_item_ll">
		        <TextView 
		            android:layout_width="0.0dip"
		            android:layout_weight="1.0"
		            android:layout_height="wrap_content"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:gravity="center_vertical"
		            android:text="主界面显示更新"/>
		        <CheckBox 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            style="@style/customer_checkbox"/>
		    </LinearLayout>
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:background="#dbdbdb"/>
		    <LinearLayout 
		        style="@style/more_item_ll">
		        <TextView 
		            android:layout_width="0.0dip"
		            android:layout_weight="1.0"
		            android:layout_height="wrap_content"
		            android:textColor="#000000"
		            android:textSize="16sp"
		            android:gravity="center_vertical"
		            android:text="2G/3G网络下禁止下载图片"/>
		        <CheckBox 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            style="@style/customer_checkbox"/>
		    </LinearLayout>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/round_xbg"
		    android:layout_marginTop="10dip"
		    android:padding="10dip"
		    android:orientation="vertical">
		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:textSize="16sp"
	            android:gravity="center_vertical"
	            android:text="清除缓存"/>
		</LinearLayout>
    </LinearLayout>
    </com.cyou.setting.CustomerScrollView>
</LinearLayout>